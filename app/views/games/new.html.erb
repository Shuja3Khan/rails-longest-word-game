<h1>New Game</h1>
<% @letters.each do |letter| %>
<p><%= letter %></p>
<% end %>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="letters" value="<%= params[:letters] %>" placeholder="What's the longest word you can get?">
  <input type="submit">
</form>
